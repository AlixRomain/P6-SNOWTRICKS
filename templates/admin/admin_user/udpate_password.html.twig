{% extends "admin_base.html.twig" %}

{% block title %}Modification du mot de passe{% endblock %}

{% form_theme form _self %}

{% block content %}
    <div class="container m-auto ">
        <h1 id="titre" class="col-lg-12 mb-5">Modification de votre mot de passe</h1>
        <div class="row text-center">
            <div class="col-md-6">
                <div class="effetBtn" style="width: 100%">
                    <div class="row p-3">
                        <div class="col-md-6 mb-5 text-left">
                            <h5 style="color: white;">{{ app.user.lname }} {{ app.user.fname }} <br><span style="color: #41464b;" class="date mr-2">{{ app.user.devise }} </span></h5>

                            <p style="color: #222426;" class="date mr-2">{{ app.user.email }} </p>
                            <div class="comment-footer">
                                <p class="date mr-2 mb-3">Utilisateur depuis
                                    {% set difference = date(app.user.dateCreate|date('Y/m/d')).diff(date('now'|date('Y/m/d'))) %}
                                    {% set leftDays = difference.days %}
                                    {% if leftDays == 1 %}
                                        1 jour
                                    {% elseif leftDays == 0 %}
                                        moins de 24 heures
                                    {% else %}
                                        {{ leftDays }} jours
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <img id="mainImage" class="avatar" src="/asset/media/avatar{{ asset(app.user.avatar) }}" alt="Profil de {{ app.user.lname }}">
                        </div>
                    </div>
                </div>
            </div>
            <div class=" text-center col-md-6">
                {{ form_start(form) }}
                <div class=" mb-3 ">
                        <div class="col-md-12  effetBtn"> {{ form_row(form.old_password) }}</div>
                        <div class="col-md-12  effetBtn">{{ form_row(form.new_password) }}</div>
                </div>
                <button type="submit" class="btn btn-success mb-5">Modifier mon mot de passe</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
