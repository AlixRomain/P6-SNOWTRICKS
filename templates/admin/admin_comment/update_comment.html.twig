{% extends 'admin_base.html.twig' %}
{% block title %}Modifier un commentaire{% endblock %}

{% block content %}
        <div class="col-lg-6 m-auto" >
            <div  class="card card-small mb-4">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Modifier votre commentaire</h6>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                        Trick : <a href="/trick/{{ comment.tricks.id }}#{{ comment.id }}" target="_blank">{{ comment.tricks.name }}</a>
                    </li>
                    <li class="list-group-item p-3">
                        <div class="row">
                            <div class="col">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_row(form.content) }}
                                </div>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-success mt-3">Modifier le commentaire</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
{% endblock %}
